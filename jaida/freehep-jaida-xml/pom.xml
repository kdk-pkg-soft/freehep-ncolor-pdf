<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>jaida-pom</artifactId>
    <groupId>org.freehep</groupId>
    <version>3.3.0-13-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.freehep</groupId>
  <artifactId>freehep-jaida-xml</artifactId>
  <name>FreeHEP JAIDA XML</name>
  <description>FreeHEP JAIDA XML</description>
  <repositories>
    <repository>
      <id>freehep-maven</id>
      <name>Maven FreeHEP</name>
      <url>http://java.freehep.org/maven2</url>
    </repository>
  </repositories>
  <distributionManagement>
    <!-- for temp doc -->
    <site>
      <id>freehep-web-deploy</id>
      <url>scpexe://svn.freehep.org/nfs/slac/g/jas/workspace/freehep/__star__/web/freehep/sandbox/aida-binary-xml</url>
    </site>
  </distributionManagement>
  <build>
    <plugins>
      <plugin>
        <groupId>org.freehep</groupId>
        <artifactId>freehep-wbxml-plugin</artifactId>
        <configuration>
           <source>AidaWBXML</source>
        </configuration>
        <executions>
          <execution>
            <id>java</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
               <pkg>hep.aida.ref.xml.binary</pkg>
               <targetDirectory>${basedir}/src/main/java</targetDirectory>
            </configuration>
          </execution>
          <execution>
            <id>cpp</id>
            <configuration>
              <namespace>WBXML</namespace>
            </configuration>
            <goals>
              <goal>cpp</goal>
            </goals>
          </execution>
          <execution>
            <id>doc</id>
            <goals>
              <goal>doc</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.0.2</version>
        <executions>
          <execution>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>hep.aida.ref.xml.converters.Aida</mainClass>
          <arguments>
            <argument>out.ascii</argument>
            <argument>out2.binary</argument>
          </arguments>        
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.freehep</groupId>
      <artifactId>freehep-xml</artifactId>
      <version>2.1.2</version>
    </dependency>
    <dependency>
      <groupId>org.freehep</groupId>
      <artifactId>freehep-argv</artifactId>
      <version>2.0.1</version>
    </dependency>
    <dependency>
      <groupId>net.java.dev</groupId>
      <artifactId>truezip</artifactId>
      <version>6.6</version>
    </dependency>    
  </dependencies>    
</project>

