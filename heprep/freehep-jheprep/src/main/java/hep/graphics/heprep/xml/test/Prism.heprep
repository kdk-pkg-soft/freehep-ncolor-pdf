<?xml version="1.0" encoding="ISO-8859-1"?>
<heprep xmlns="http://java.freehep.org/schemas/heprep/2.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:schemaLocation="http://java.freehep.org/schemas/heprep/2.0 http://java.freehep.org/schemas/heprep/2.0/HepRep.xsd">

    <layer order="Geometry"/>
        
    <typetree name="Types">
        <type name="TextType">
            <attvalue name="layer" value="Geometry" />
            <attvalue name="drawAs" value="Text" />
            <attvalue name="HPos" value="0.9" />
            <attvalue name="VPos" value="0.1" />
        </type>
        <type name="PrismType">
            <attvalue name="layer" value="Geometry" />
            <attvalue name="drawAs" value="Prism" />
        </type>
    </typetree>

    <instancetree name="TestPrism" typetreename="Types">
        <instance type="TextType">
            <attvalue name="Text" value="Prism" />
        </instance>
        <instance type="PrismType">
            <point x="10.0" y="5.0"  z="20.0" />
            <point x="30.0" y="5.0"  z="20.0" />
            <point x="30.0" y="15.0" z="20.0" />
            <point x="10.0" y="15.0" z="20.0" />
            <point x="0.0"  y="0.0"  z="100.0" />
            <point x="40.0" y="0.0"  z="100.0" />
            <point x="40.0" y="20.0" z="100.0" />
            <point x="0.0"  y="20.0" z="100.0" />
        </instance>
    </instancetree>

</heprep>
