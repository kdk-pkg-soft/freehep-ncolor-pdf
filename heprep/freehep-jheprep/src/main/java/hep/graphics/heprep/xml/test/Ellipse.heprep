<?xml version="1.0" encoding="ISO-8859-1"?>
<heprep xmlns="http://java.freehep.org/schemas/heprep/2.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:schemaLocation="http://java.freehep.org/schemas/heprep/2.0 http://java.freehep.org/schemas/heprep/2.0/HepRep.xsd">

    <layer order="Geometry"/>
        
    <typetree name="Types">
        <type name="TextType">
            <attvalue name="layer" value="Geometry" />
            <attvalue name="drawAs" value="Text" />
            <attvalue name="HPos" value="0.9" />
            <attvalue name="VPos" value="0.1" />
        </type>
        <type name="EllipseType">
            <attvalue name="layer" value="Geometry" />
            <attvalue name="drawAs" value="Ellipse" />
            <attvalue name="Radius" value="5" />
            <attvalue name="Radius2" value="10" />
        </type>
    </typetree>

    <instancetree name="TestEllipse" typetreename="Types">
        <instance type="TextType">
            <attvalue name="Text" value="Ellipse" />
        </instance>
        <instance type="EllipseType">
            <attvalue name="drawAs" value="Point" />
            <point x="0.0" y="0.0" z="0.0" />
        </instance>
        <instance type="EllipseType">
            <attvalue name="Color" value="cyan" />
            <point x="0.0" y="0.0" z="0.0" />
        </instance>
        <instance type="EllipseType">
            <attvalue name="Color" value="orange" />
            <attvalue name="Theta" value="1.57" />
            <point x="0.0" y="0.0" z="0.0" />
        </instance>
        <instance type="EllipseType">
            <attvalue name="Color" value="green" />
            <attvalue name="Phi" value="1.57" />
            <attvalue name="Theta" value="1.57" />
            <point x="0.0" y="0.0" z="0.0" />
        </instance>
        <instance type="EllipseType">
            <point x="0.0" y="0.0" z="0.0" />
            <point x="2.0" y="2.0" z="2.0" />
        </instance>
        <instance type="EllipseType">
            <attvalue name="Theta" value="1.57" />
            <point x="10.0" y="10.0" z="10.0" />
            <point x="14.0" y="12.0" z="11.0" />
        </instance>
    </instancetree>

</heprep>
