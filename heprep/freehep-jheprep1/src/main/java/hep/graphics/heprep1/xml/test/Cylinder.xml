<?xml version="1.0" encoding="ISO-8859-1"?>
<heprep:heprep xmlns:heprep='http://java.freehep.org/schemas/heprep/1.0'
               xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' 
               xsi:schemaLocation='http://java.freehep.org/schemas/heprep/1.0 http://java.freehep.org/schemas/heprep/1.0/HepRep.xsd'>

    <heprep:type name="TestCylinder">
        <heprep:attvalue name="banner" value="true" />
        <heprep:attvalue name="framed" value="true" />
        <heprep:attvalue name="drawAs" value="Cylinder" />
        <heprep:attvalue name="radius1" value="2" />
        <heprep:attvalue name="radius2" value="2" />
        <heprep:instance>
            <heprep:primitive>
                <heprep:attvalue name="lineColor" value="cyan" />
                <heprep:attvalue name="label" value="x-axis" showLabel="1" />
                <heprep:point x="0.0" y="0.0" z="0.0" />
                <heprep:point x="4.0" y="0.0" z="0.0" />
            </heprep:primitive>
            <heprep:primitive>
                <heprep:attvalue name="lineColor" value="orange" />
                <heprep:attvalue name="label" value="y-axis" showLabel="1" />
                <heprep:point x="0.0" y="0.0" z="0.0" />
                <heprep:point x="0.0" y="4.0" z="0.0" />
            </heprep:primitive>
            <heprep:primitive>
                <heprep:attvalue name="lineColor" value="green" />
                <heprep:attvalue name="label" value="z-axis" showLabel="1" />
                <heprep:point x="0.0" y="0.0" z="0.0" />
                <heprep:point x="0.0" y="0.0" z="4.0" />
            </heprep:primitive>
            <heprep:primitive>
                <heprep:attvalue name="Phi1" value="0.2" showLabel="1" />
                <heprep:attvalue name="Phi2" value="0.3" showLabel="1" />
                <heprep:point x="10.0" y="10.0" z="10.0" />
                <heprep:point x="12.3" y="12.3" z="12.3" />
            </heprep:primitive>            
        </heprep:instance>        
    </heprep:type>

</heprep:heprep>
