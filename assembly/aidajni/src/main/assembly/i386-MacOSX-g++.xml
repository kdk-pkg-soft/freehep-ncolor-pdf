<assembly>
  <id>i386-MacOSX-g++</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>LGPL*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/bin</directory>
      <outputDirectory>bin</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/examples</directory>
      <outputDirectory>examples</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/nar/bin</directory>
      <outputDirectory>bin</outputDirectory>      
      <excludes>
        <exclude>**/history.xml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/nar/include/AIDA</directory>
      <outputDirectory>include/AIDA</outputDirectory>      
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/nar/lib/i386-MacOSX-g++/static</directory>
      <outputDirectory>lib/i386-MacOSX-g++</outputDirectory>      
      <includes>
        <include>*</include>
      </includes>
      <excludes>
        <exclude>**/history.xml</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>org.freehep:aida-config</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
